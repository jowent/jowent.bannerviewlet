<div id="banner-viewlet"
     tal:condition="view/available">
    <tal:single_image 
         condition="python:len(view.banners) == 1"
         >
        <div id="banner-img"
             tal:define="context python: view.banners[0];
                         scale context/@@images;
                         banner python:scale.scale('banner_image', width=2000, height=320, direction='up')"
             tal:attributes="style string:background-image:url(${banner/url})" />
    </tal:single_image>
    <tal:slideshow 
         condition="python:len(view.banners) > 1"
         repeat="ban view/banners">
        <div id="banner-img"
             tal:define="scale ban/@@images;
                         banner python:scale.scale('banner_image', width=2000, height=320, direction='up')"
             tal:attributes="style string:background-image:url(${banner/url})" />
    </tal:slideshow>
</div>
